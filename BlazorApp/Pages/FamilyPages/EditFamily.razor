@page "/editFamily/{Id}"
@page "/newFamily/"

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="form-group">
                <label for="id">
                    Id
                </label>
                <input type="text" class="col-12" id="id" value="@Family.Id" disabled="disabled" />
            </div>

            <div class="form-group">
                <label for="familyName">
                    Name
                </label>
                <input type="text" class="col-12" id="familyName" @bind="@Family.FamilyName" />
            </div>

            <button class="btn btn-primary" @onclick="Save">Submit</button>
            <button class="btn btn-danger" @onclick="Cancel">Cancel</button>

        </div>
    </div>
</div>