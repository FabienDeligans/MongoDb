@page "/editParent/{ParentId}"
@page "/newParent/"

<h3>Edit page</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="form-group">
                <label for="id">
                    Id
                </label>
                <input type="text" class="col-12" id="id" value="@Parent.Id" disabled="disabled" />
            </div>

            <div class="form-group">
                <label for="FirstName">
                    FirstName
                </label>
                <input type="text" class="col-12" id="FirstName" @bind="@Parent.FirstName" />
            </div>

            <div class="form-group">
                <label for="lastName">
                    LastName
                </label>
                <input type="text" class="col-12" id="lastName" @bind="@Parent.LastName" />
            </div>

            <div class="form-group">
                <label for="Adress">
                    Adress
                </label>
                <input type="text" class="col-12" id="Adress" @bind="@Parent.Adress" />
            </div>

            <div class="form-group">
                <label for="Cp">
                    Cp
                </label>
                <input type="text" class="col-12" id="Cp" @bind="@Parent.Cp" />
            </div>

            <div class="form-group">
                <label for="City">
                    City
                </label>
                <input type="text" class="col-12" id="City" @bind="@Parent.City" />
            </div>
            

            <div class="form-group">
                <label for="Family">
                    Family
                </label>

                <select class="custom-select" @bind="Parent.FamilyId" id="Family">
                    <option disabled="disabled" style="background-color: yellow">Choisir une famille</option>
                    @foreach (var family in Families)
                    {
                        <option value="@family.Id">@family.FamilyName</option>
                    }

                </select>
            </div>

            <button class="btn btn-primary" @onclick="Save">Submit</button>
            <button class="btn btn-danger" @onclick="Cancel">Cancel</button>

        </div>
    </div>
</div>